<div class="container">
    <div class="row justify-content-center text-left mt-4">
      <form class="col-12 col-md-8 col-lg-6 form-acc" action="/sign-up" method="post">
          <h2 class="text-center">Sign Up</h2>
          <p class="text-center">Create your account by entering your email address and choosing a password</p>
          <hr>
          <div class="form-group">
              <label for="firstName" class="mb-1">First Name</label>
              <input type="text" id="firstName" class="form-control" name="firstName" value="<%-values.firstName%>">
              <% if (validationMessages.firstName) { %>
                <span style="color: red"><%= validationMessages.firstName %></span><br/>
              <% } %>
          </div>
          <div class="form-group">
             <label for="lastName" class="mb-1">Last Name</label>
              <input type="text" id="lastName" class="form-control" name="lastName" value="<%-values.lastName%>">
              <% if (validationMessages.lastName) { %>
                <span style="color: red"><%= validationMessages.lastName %></span><br/>
              <% } %>
          </div>
          <div class="form-group">
              <label for="email" class="mb-1">Email Address</label>
              <input type="text" id="email" class="form-control" placeholder="example@gmail.com" name="email" value="<%-values.email%>">
              <% if (validationMessages.email) { %>
                <span style="color: red"><%= validationMessages.email %></span><br/>
              <% } %>
          </div>
          <div class="form-group">
            <label for="password" class="mb-1">Password</label>
            <div class="d-flex">
              <input type="password" id="password" class="form-control" name="password" value="<%-values.password%>">
              <i class="bi bi-eye-slash" id="togglePassword"></i>
            </div>
              <% if (validationMessages.password) { %>
                <%validationMessages.password.forEach(message => { %>
                  <span style="color: red"><%= message %></span><br/>
                <% }) %>
              <% } %>
          </div>
          <div class="form-group text-center">
              <button type="submit" class="btn btn-block">Sign up today</button>
          </div>
          <div class="form-group text-center">
            <p><a class="link-to-acc" href="/log-in">Already registered?</a></p>
          </div>
      </form>
    </div>
  </div>
  <script src="/togglePassword.js"></script>
  